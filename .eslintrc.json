{
    "env": {
        "browser": true,
        "es6":true
    },
    "globals": {
        "document": false
    },
    "extends": [
        "airbnb-base", "prettier"
    ],
    "plugins": ["prettier"],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-use-before-define": ["error", { "functions": false }],
        "linebreak-style": ["error", "windows"],
        "quotes": ["error", "single", {"avoidEscape": true}],
        "semi": ["error", "always"],
        "no-var": ["error"],
        "no-console": "warn",
        "no-alert": "warn",
        "no-debugger": "warn",
        "prefer-template": "error",
        "no-self-assign": "warn",
        "max-len": ["warn", 100],
        "no-unused-vars": "off"
    }
}